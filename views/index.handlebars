<body>
    <div class="container">
        <div>
            <h1>GREETING WEB APP</h1>
        </div>
        <div>
            <p>Please enter a name, select a language of your prefrence and click the greet button.</p>
        </div>
        <div class="align">
            <div class="inputText">

                {{#if messages.info}}
                <div class="reset">
                    <h3> {{messages.info}}</h3>
                </div>
                {{/if}}

                {{#if messages.error}}
                <div class="entry">
                    <h3> {{messages.error}}</h3>
                </div>
                {{/if}}

                <form action="/greet" method="POST">
                    <label for="">Name:</label>
                    <input type="text" class="inputName" name="username" placeholder="please enter your name here">
            </div>

            <div class="counting">
                <label for="counter">Counter:</label>
                <span class="counter">{{count}}</span>
            </div>
        </div>
        <div class="langauge">
            <input type="radio" class="french" name="language" value="French">
            <label for="french">French</label>
            <input type="radio" class="xhosa" name="language" value="IsiXhosa">
            <label for="xhosa">IsiXhosa</label>
            <input type="radio" class="spanish" name="language" value="Spanish">
            <label for="spanish">Spanish</label>
        </div>

        <div class="button">
            <button class="btn" type="submit">Greet Me</button>

            </form>
            <form action="/reset" method="post">

                <button class="btn2" type="submit">Reset</button>
            </form>
            
        </div>
        <a href="/greeted"><button class="names" type="submit">GREETED NAMES</button></a>
        <div class="display">{{mesg}}</div>
    </div>
</body>

</html>